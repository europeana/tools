        	<scope>compile</scope>
        </dependency>
	</dependencies>
	<properties>
	    <annocultor.version>3.0.0</annocultor.version>
		<sesame.version>2.6.1</sesame.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>



